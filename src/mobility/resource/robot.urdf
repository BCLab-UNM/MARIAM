<?xml version="1.0"?>
<robot name="GiANT">
    
    <!-- Robot Base Link -->
    <link name="base_link">
        <inertial>
            <origin xyz="0.0 0.0 0.03175" rpy="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.254 0.2032 0.0635"/>
            </geometry>
            <material name="Gazebo/Orange"/>
        </visual>
    </link>

    <!-- Materials -->
    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>

    <!-- Left Front Wheel -->
    <link name="left_front_wheel">
        <visual>
            <origin rpy="1.57079 0 0" />
            <geometry>
                <cylinder radius="0.0539005" length="0.0663"/>
            </geometry>
            <material name="Gazebo/Black"/>
        </visual>
        <collision>
            <origin rpy="1.57079 0 0" />
            <geometry>
                <cylinder radius="0.0539005" length="0.0663"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <!-- Left Rear Wheel -->
    <link name="left_rear_wheel">
        <visual>
            <origin rpy="1.57079 0 0" />
            <geometry>
                <cylinder radius="0.0539005" length="0.0663"/>
            </geometry>
            <material name="Gazebo/Black"/>
        </visual>
        <collision>
            <origin rpy="1.57079 0 0" />
            <geometry>
                <cylinder radius="0.0539005" length="0.0663"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <!-- Right Front Wheel -->
    <link name="right_front_wheel">
        <visual>
            <origin rpy="1.57079 0 0" />
            <geometry>
                <cylinder radius="0.0539005" length="0.0663"/>
            </geometry>
            <material name="Gazebo/Black"/>
        </visual>
        <collision>
            <origin rpy="1.57079 0 0" />
            <geometry>
                <cylinder radius="0.0539005" length="0.0663"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <!-- Right Rear Wheel -->
    <link name="right_rear_wheel">
        <visual>
            <origin rpy="1.57079 0 0" />
            <geometry>
                <cylinder radius="0.0539005" length="0.0663"/>
            </geometry>
            <material name="Gazebo/Black"/>
        </visual>
        <collision>
            <origin rpy="1.57079 0 0" />
            <geometry>
                <cylinder radius="0.0539005" length="0.0663"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <!-- Joints connecting the wheels to the base_link -->
    <!-- Left Front Wheel Joint -->
    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <origin xyz="0.1016 0.13475 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <!-- Left Rear Wheel Joint -->
    <joint name="left_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_rear_wheel"/>
        <origin xyz="-0.1016 0.13475 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <!-- Right Front Wheel Joint -->
    <joint name="right_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <origin xyz="0.1016 -0.13475 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <!-- Right Rear Wheel Joint -->
    <joint name="right_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_rear_wheel"/>
        <origin xyz="-0.1016 -0.13475 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>
    
    <gazebo reference="base_link"><material>Gazebo/Orange</material></gazebo>
    <gazebo reference="left_front_wheel"><material>Gazebo/Black</material></gazebo>
    <gazebo reference="left_rear_wheel"><material>Gazebo/Black</material></gazebo>
    <gazebo reference="right_front_wheel"><material>Gazebo/Black</material></gazebo>
    <gazebo reference="right_rear_wheel"><material>Gazebo/Black</material></gazebo>
</robot>


