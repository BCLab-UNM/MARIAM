<?xml version="1.0"?>
<robot name="gazebo_configs" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="gazebo_configs">

    <gazebo reference="$(arg arm_name)/$(arg base_link_frame)">
      <material>Gazebo/DarkGray</material>
      <dampingFactor>0.01</dampingFactor>
    </gazebo>

    <gazebo reference="$(arg arm_name)/shoulder_link">
      <material>Gazebo/DarkGray</material>
      <dampingFactor>0.01</dampingFactor>
      <self_collide>true</self_collide>
    </gazebo>

    <gazebo reference="$(arg arm_name)/upper_arm_link">
      <material>Gazebo/DarkGray</material>
      <dampingFactor>0.01</dampingFactor>
      <self_collide>true</self_collide>
    </gazebo>

    <gazebo reference="$(arg arm_name)/forearm_link">
      <material>Gazebo/DarkGray</material>
      <dampingFactor>0.01</dampingFactor>
      <self_collide>true</self_collide>
    </gazebo>

    <gazebo reference="$(arg arm_name)/upper_forearm_link">
      <material>Gazebo/DarkGray</material>
      <dampingFactor>0.01</dampingFactor>
      <self_collide>true</self_collide>
    </gazebo>

    <gazebo reference="$(arg arm_name)/lower_forearm_link">
      <material>Gazebo/DarkGray</material>
      <dampingFactor>0.01</dampingFactor>
      <self_collide>true</self_collide>
    </gazebo>

    <gazebo reference="$(arg arm_name)/wrist_link">
      <material>Gazebo/DarkGray</material>
      <dampingFactor>0.01</dampingFactor>
      <self_collide>true</self_collide>
    </gazebo>

    <gazebo reference="$(arg arm_name)/gripper_link">
      <material>Gazebo/Purple</material>
      <dampingFactor>0.01</dampingFactor>
    </gazebo>

    <gazebo reference="$(arg arm_name)/gripper_prop_link">
      <dampingFactor>0.01</dampingFactor>
      <material>Gazebo/DarkGray</material>
    </gazebo>

    <gazebo reference="$(arg arm_name)/gripper_bar_link">
      <material>Gazebo/DarkGray</material>
    </gazebo>

    <gazebo reference="$(arg arm_name)/left_finger_link">
      <material>Gazebo/DarkGray</material>
      <dampingFactor>0.01</dampingFactor>
    </gazebo>

    <gazebo reference="$(arg arm_name)/right_finger_link">
      <material>Gazebo/DarkGray</material>
      <dampingFactor>0.01</dampingFactor>
    </gazebo>

    <gazebo reference="ar_tag">
      <disableFixedJointLumping>true</disableFixedJointLumping>
    </gazebo>

    <gazebo reference="ee_arm">
      <disableFixedJointLumping>true</disableFixedJointLumping>
    </gazebo>

    <gazebo reference="gripper_bar">
      <disableFixedJointLumping>true</disableFixedJointLumping>
    </gazebo>

    <gazebo reference="ee_bar">
      <disableFixedJointLumping>true</disableFixedJointLumping>
    </gazebo>

    <gazebo reference="ee_gripper">
      <disableFixedJointLumping>true</disableFixedJointLumping>
    </gazebo>

  </xacro:macro>

</robot>
